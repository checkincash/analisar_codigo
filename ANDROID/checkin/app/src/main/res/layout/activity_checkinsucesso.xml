<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade_blue"
    tools:context="br.com.alphasolutions.checkin.activity.CheckinsucessoActivity">

    <ImageView
        android:id="@+id/imageFotoID"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/txtmensagem1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageFotoID"
        android:background="@drawable/chekin_style"
        android:gravity="center"
        android:padding="10dp"
        android:elevation="10dp"
        android:text="Check-in"
        android:textColor="@color/branco_padrao"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dataAtivacaoID"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCodigo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:gravity="center"
        android:text="21/12/2017"
        android:textAlignment="center"
        android:textColor="@color/branco_padrao"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFazerCheckOutID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:padding="2dp"
        android:text="@string/checkout"
        android:textColor="@color/branco_padrao"
        android:textSize="19sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBarCheckOurID"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtTokenID"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtTokenID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtMensagem2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/fundo_caixa_texto"
        android:elevation="10dp"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="TOKEN"
        android:textColor="@color/colorAccent2"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTokenID"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/fundo_caixa_texto"
        android:elevation="10dp"
        android:padding="10dp"
        android:text="INFORME SEU CÓDIGO AO ATENDENTE"
        android:textAlignment="center"
        android:textColor="@color/branco_padrao"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMensagem2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtTokenID"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/fundo_caixa_texto"
        android:elevation="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="CHECK-IN REALIZADO COM SUCESSO!"
        android:textAlignment="center"
        android:textColor="@color/branco_padrao"
        android:textSize="13sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btnFazerCheckOutID"
        android:layout_alignStart="@+id/textViewCodigo"
        android:layout_marginStart="24dp"
        app:srcCompat="@drawable/iconcheckin" />

    <TextView
        android:id="@+id/txtSucesschekinPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnFazerCheckOutID"
        android:layout_toEndOf="@+id/imageView5"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:text="Parabéns, você ganhou 10 Pin's" />

</RelativeLayout>
