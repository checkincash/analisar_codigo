<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    >

    <ImageView
        android:id="@+id/imgFotoID"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:padding="8dp"

        android:scaleType="center"
        app:srcCompat="@android:color/white" />

    <TextView
        android:id="@+id/txtTituloID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEnderecoID"
        android:layout_alignStart="@+id/txtEnderecoID"
        android:layout_below="@+id/imgFotoID"
        android:text="Titulo da campanha"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtEnderecoID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRazaoID"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="13dp"

        android:text="Rua XV de novembro, 2178 - Centro - Tel 999999"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtViewCategoriaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/txtEnderecoID"
        android:layout_alignStart="@+id/txtEnderecoID"
        android:layout_below="@+id/txtEnderecoID"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/categoria_style"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="Loja"
        android:textColor="@color/com_facebook_button_background_color_focused_disabled"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtViewClassificacao1ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtViewCategoriaID"
        android:layout_alignBottom="@+id/txtViewCategoriaID"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@+id/txtViewCategoriaID"
        android:layout_toRightOf="@+id/txtViewCategoriaID"
        android:background="@drawable/categoria_style"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="classificacao1"
        android:textColor="@color/com_facebook_button_background_color_focused_disabled"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtViewClassificacao2ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtViewClassificacao1ID"
        android:layout_alignBottom="@+id/txtViewClassificacao1ID"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@+id/txtViewClassificacao1ID"
        android:layout_toRightOf="@+id/txtViewClassificacao1ID"
        android:background="@drawable/categoria_style"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="classificacao2"
        android:textColor="@color/com_facebook_button_background_color_focused_disabled"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtEndereco2ID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtViewPerDesc1"
        android:layout_alignStart="@+id/txtViewPerDesc1"
        android:layout_below="@+id/txtViewPerDesc1"
        android:text="Divisor Divisor"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imageViewStar"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgFotoID"
        android:layout_alignEnd="@+id/imgFotoID"
        android:layout_alignRight="@+id/imgFotoID"
        android:alpha="1"
        android:elevation="25dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:padding="2dp"
        app:srcCompat="@drawable/starch" />

    <TextView
        android:id="@+id/textViewRazaoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:gravity="center"
        android:padding="1dp"
android:layout_marginTop="7dp"
        android:layout_marginLeft="11dp"

        android:text="MN EVENTOS E SHOWS"
        android:textColor="@color/wallet_dim_foreground_inverse_holo_dark"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_below="@+id/imgFotoID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageViewPcpa"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtTituloID"
        android:layout_toLeftOf="@+id/txtViewCategoriaID"
        android:layout_toStartOf="@+id/txtViewCategoriaID"
        android:padding="2dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/brinde" />

    <ImageView
        android:id="@+id/imgCheckID"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewRazaoID"
        android:layout_alignStart="@+id/textViewRazaoID"
        android:layout_alignTop="@+id/imgFotoID"
        android:layout_marginLeft="10dp"
        android:alpha="10"
        app:srcCompat="@drawable/checkbtn" />

    <TextView
        android:id="@+id/textViewCheckin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtViewCategoriaID"
        android:layout_alignBottom="@+id/txtViewCategoriaID"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/chekin_style"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:text="check-in"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDescontoID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewCategoriaID"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/imagePromo"
        android:layout_toRightOf="@+id/imagePromo"
        android:text="-10%  desconto check-in"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imagePromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtViewCategoriaID"
        android:layout_alignStart="@+id/txtViewCategoriaID"
        android:layout_below="@+id/txtViewCategoriaID"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/etiquetapromo" />


    <TextView
        android:id="@+id/txtViewPerDesc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/imagePromo"
        android:layout_alignStart="@+id/imagePromo"
        android:layout_below="@+id/textViewDescontoID"
        android:layout_marginTop="4dp"
        android:background="@drawable/descontos"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:text="SEG: 10%"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtViewPerDesc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/txtViewPerDesc1"
        android:layout_alignBottom="@+id/txtViewPerDesc1"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@+id/txtViewPerDesc1"
        android:layout_toRightOf="@+id/txtViewPerDesc1"
        android:background="@drawable/descontos"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:text="TER: 10%"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtViewPerDesc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/txtEndereco2ID"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@+id/txtViewPerDesc2"
        android:layout_toRightOf="@+id/txtViewPerDesc2"
        android:background="@drawable/descontos"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:text="QUA: 15%"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_above="@+id/txtEndereco2ID"
        android:layout_toStartOf="@+id/textViewPin"
        app:srcCompat="@drawable/iconcheckin" />

    <TextView
        android:id="@+id/textViewPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewCheckin"
        android:layout_below="@+id/textViewDescontoID"
        android:text="Ganhe 102 Pin's"
        android:textColor="@android:color/holo_red_light" />

</RelativeLayout>