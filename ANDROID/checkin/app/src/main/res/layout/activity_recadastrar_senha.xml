<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade_blue"

    tools:context="br.com.alphasolutions.checkin.activity.RecadastrarSenhaActivity">


    <TextView
        android:id="@+id/txtNomeAlteraSenhaId"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"

        android:layout_above="@+id/txtAlteraSenhaEmailId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/fundo_caixa_texto"
        android:hint="Seu nome"
        android:padding="12dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtAlteraSenhaSobrenomeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="1dp"
        android:layout_alignBaseline="@+id/txtNomeAlteraSenhaId"
        android:layout_alignBottom="@+id/txtNomeAlteraSenhaId"
        android:layout_alignEnd="@+id/txtAlteraSenhaEmailId"
        android:layout_alignRight="@+id/txtAlteraSenhaEmailId"
        android:layout_toEndOf="@+id/txtNomeAlteraSenhaId"
        android:layout_toRightOf="@+id/txtNomeAlteraSenhaId"
        android:background="@drawable/fundo_caixa_texto"
        android:ems="10"
        android:hint="Digite seu Sobrenome"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtAlteraSenhaEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/progressBarAlteraSenhaId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/fundo_caixa_texto"
        android:ems="10"
        android:hint="Seu Emial"
        android:padding="12dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editAlteraSenhaId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/txtAlteraSenhaEmailId"
        android:background="@drawable/fundo_caixa_texto"
        android:ems="10"
        android:hint="Nova Senha"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editAlteraSenhaRedigiteId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editAlteraSenhaId"
        android:layout_marginTop="10dp"
        android:background="@drawable/fundo_caixa_texto"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:ems="10"
        android:hint="Repita a Senha"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnCadastrarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/fundo_botao"
        android:text="@string/gravar"
        android:textColor="@android:color/white" />


    <TextView
        android:id="@+id/txttitulocabe"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/fundo_caixa_texto"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:foregroundGravity="top"
        android:gravity="center"
        android:text="Alterar Senha"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBarAlteraSenhaId"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>
