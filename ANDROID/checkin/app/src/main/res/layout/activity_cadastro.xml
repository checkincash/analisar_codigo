<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telacadastroid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade_blue"
    android:gravity="center_vertical|center_horizontal"
    tools:context="br.com.alphasolutions.checkin.activity.CadastroActivity">

    <TextView
        android:id="@+id/txtimgtop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/fundo_caixa_texto"
        android:elevation="5dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="Cadastrar-se"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnGravar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/fundo_botao"
        android:text="@string/gravar"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtPossueConta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:onClick="tenhoConta"
        android:text="Já tem conta? faça o login!"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="120dp">


        <EditText
            android:id="@+id/txtnome"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fundo_caixa_texto"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:padding="14dp"
            android:textSize="14sp"


            />

        <EditText
            android:id="@+id/txtAlteraSenhaSobrenomeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtnome"
            android:layout_below="@+id/txtnome"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/txtnome"
            android:layout_toRightOf="@+id/txtnome"
            android:background="@drawable/fundo_caixa_texto"
            android:ems="10"
            android:hint="Sobrenome"

            android:inputType="textPersonName"
            android:padding="14dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtEmailUserId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtEmailRedigite"
            android:layout_alignStart="@+id/txtEmailRedigite"
            android:layout_below="@+id/txtnome"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fundo_caixa_texto"
            android:ems="10"
            android:hint="Endereço de E-mail"
            android:inputType="textPersonName"
            android:padding="14dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtEmailRedigite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEmailUserId"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fundo_caixa_texto"
            android:ems="10"
            android:hint="Redigite seu E-mail"
            android:inputType="textPersonName"
            android:padding="14dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEmailRedigite"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fundo_caixa_texto"

            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Digite sua Senha"

            android:inputType="textPassword"

            android:padding="14dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtSenhaRedigite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSenha"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fundo_caixa_texto"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Repita a sua Senha"
            android:inputType="textPassword"

            android:padding="14dp"
            android:textSize="14sp" />


    </RelativeLayout>


    <ProgressBar
        android:id="@+id/progressBarID"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="129dp" />


</RelativeLayout>
