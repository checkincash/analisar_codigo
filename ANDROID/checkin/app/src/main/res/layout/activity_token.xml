<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade_blue"
    android:gravity="center_vertical|center_horizontal"
    tools:context="br.com.alphasolutions.checkin.activity.TokenActivity">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_weight="1"
        android:text="@string/token"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtTokenId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/fundo_caixa_texto"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:digits="0123456789"
        android:hint="Informe aqui seu token"
        android:padding="14dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewToken"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:text="Você recebeu por e-mail um Token e deve informá-lo na caixa abaixo para o registro de sua nova senha."
        android:textSize="10sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnEnviarTokenId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/fundo_botao"
        android:text="@string/mensagem_enviar"
        android:textColor="@color/branco_padrao"
        android:textSize="18sp" />
</RelativeLayout>

    <TextView
        android:id="@+id/txttitulocabe"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/fundo_caixa_texto"
        android:textColor="@android:color/white"
        android:foregroundGravity="top"
        android:gravity="center"
        android:text="RECUPERAR SENHA"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBarTokenId"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttitulocabe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="227dp" />

</RelativeLayout>
