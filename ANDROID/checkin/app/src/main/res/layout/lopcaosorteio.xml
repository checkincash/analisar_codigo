<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewPremioID"
        android:layout_width="139dp"
        android:layout_height="77dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPinsPremioID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="Concorra com 80 Pin's"
        android:textColor="@color/color_gray"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewPremioID"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPinsNecessariosID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Faltam 49 pin cash para concorrer"
        android:textColor="@color/color_gray"
        app:layout_constraintStart_toEndOf="@+id/imageViewPremioID"
        app:layout_constraintTop_toBottomOf="@+id/textViewPinsPremioID" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Status:"
        android:textColor="@color/color_gray"
        app:layout_constraintStart_toEndOf="@+id/imageViewPremioID"
        app:layout_constraintTop_toBottomOf="@+id/textViewPinsNecessariosID" />

    <TextView
        android:id="@+id/textViewStatusID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="NÃ£o Habilitado"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textViewPinsNecessariosID" />
</android.support.constraint.ConstraintLayout>