<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade_blue"
    android:gravity="center_vertical|center_horizontal"
    tools:context="br.com.alphasolutions.checkin.activity.RecuperaSenhaActivity">

    <Button
        android:id="@+id/btnEnviarUserId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/fundo_botao"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="5dp"
        android:text="@string/mensagem_enviar"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/imgcheckincash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="@drawable/logochk2" />

    <TextView
        android:id="@+id/txtComunicado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Para redefinir sua senha, digite o endereço de e-mail e enviaremos instruções sobre como criar outra senha."
        android:textColor="@android:color/white"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/txtEmailUserId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_alignBottom="@+id/txtComunicado"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/fundo_caixa_texto"
        android:ems="10"
        android:hint="@string/Mensagem_informe_email"
        android:inputType="textPersonName"
        android:padding="16dp" />

    <ProgressBar
        android:id="@+id/progressBarRecuperaId"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtComunicado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />
</RelativeLayout>



